{
  "compilerOptions": {
    "baseUrl": "source",
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": ["source/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
